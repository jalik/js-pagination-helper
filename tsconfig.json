{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./esm",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
